<!DOCTYPE html>
<html lang="th">

<%- include('partials/header', { title: 'แก้ไขข้อมูลโปรเจกต์' }) %>

<div class="page-title">
    <h1>แก้ไขข้อมูลโปรเจกต์</h1>
</div>

<div class="form-container">
    <form action="/project/update/1" method="POST">

        <label>Project ID</label>
        <input type="text" name="project_id" value="1" readonly>

        <label>User ID</label>
        <input type="number" name="user_id" value="101" required>

        <label>Project Name</label>
        <input type="text" name="project_name" value="Website Redesign" required>

        <label>Start Date</label>
        <input type="date" name="start_date" value="2026-01-01" required>

        <label>End Date</label>
        <input type="date" name="end_date" value="2026-03-01" required>

        <label>Status</label>
        <select name="status" required>
            <option value="In Progress" selected>In Progress</option>
            <option value="Completed">Completed</option>
            <option value="Pending">Pending</option>
        </select>

        <div class="form-buttons">
            <button type="submit" class="btn-primary">อัปเดต</button>
            <button type="button" class="btn-secondary" onclick="history.back()">ยกเลิก</button>
        </div>

    </form>
</div>

<%- include('partials/footer') %>